<!DOCTYPE html>
<html>

<head>
  <title> Single Movie </title>
  <%- include('head') %>
</head>

<body>
  <%- include('navbar')  %>
  <div class="container">
    <div class="row">
      <div class="text-md-center">
        <h1 class="single-movie-title">
          <%= parseData.title %>
        </h1>

        <h3 class="single-movie-title">
          <%= parseData.tagline %>
        </h3>


        <a href="<%= parseData.homepage  %> "><img src="<%= imageBaseUrl + parseData.poster_path %>" /></a>

        <p class="overview-header">Movie Synopsis: <span class="single-movie-overview">
            <%= parseData.overview %>
          </span></p>
      </div>
    </div>
  </div>

  <!-- Button trigger modal -->
  <div class="text-md-center">
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
      More Details
    </button>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel">
            Movie Information
          </h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <a href="https://www.imdb.com/title/<%= parseData.imdb_id %> " target="_blank">
            IMDB Link
          </a>
          <p>Budget: <%= parseData.budget %> </p>
          <p>Revenue: <%= parseData.revenue %> </p>
          <p>Release Date: <%= parseData.release_date  %> </p>
          <ul>
            <% parseData.production_companies.forEach(company => {%>
            <li> <%= company.name %></li>
            <%}); %>
          </ul>


        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

</body>

</html>